 Bluetooth importálása

def  ReceiveMessages ():
  server_sock = bluetooth . BluetoothSocket ( bluetooth . RFCOMM )
  
  port  =  1
  szerver_sock . bind (( "" , port ))
  szerver_sock . figyelj ( 1 )
  
  client_sock , cím  =  szerver_sock . elfogadni ()
  print  "Elfogadott kapcsolat innen"  +  str ( cím )
  
  adatok  =  kliens_sock . recv ( 1024 )
  nyomtatás  "fogadott [%s]"  %  adat
  
  client_sock . bezárni ()
  szerver_sock . bezárni ()
  
def  sendMessageTo ( célBluetoothMacAddress ):
  port  =  1
  zokni = bluetooth . BluetoothSocket ( bluetooth . RFCOMM )
  zoknit . csatlakozás (( célBluetoothMacAddress , port ))
  zoknit . küldd ( "helló!!" )
  zoknit . bezárni ()
  
def  lookUpNearbyBluetoothDevices ():
  nearby_devices  =  bluetooth . Discover_devices ()
   bdaddr  esetén a  nearby_devices mappában :
    print  str ( bluetooth . keresési_név ( bdaddr )) + " [" + str ( bdaddr ) + "]"    
    
    
LookUpNearbyBluetoothDevices ()
